<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="dotnetprojects.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:dotnetprojects"
    Shell.FlyoutBehavior="Disabled"
    Title="dotnetprojects">

    <TabBar>

        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Icon="{OnPlatform 'grapevine.png'}"
        Route="MainPage" />

        <ShellContent
            Title="Messages"
            ContentTemplate="{DataTemplate local:Messages}"
            Icon="{OnPlatform 'messages.png'}" />

        <ShellContent
            Title="Bench"
            ContentTemplate="{DataTemplate local:Bench}"
            Icon="{OnPlatform 'bench.png'}" />

        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:Profile}"
            Icon="{OnPlatform 'profile.png'}" />
    </TabBar>



</Shell>
